<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_brown"
    tools:context=".methods">

    <TextView
        android:id="@+id/titulo_metodos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Métodos"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toEndOf="@+id/btn_am_return"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_am_return"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/light_brown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/regresar_mdpi_02" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="333dp"
        android:layout_height="86dp"
        android:layout_marginTop="64dp"
        android:text="Queremos que lleves una vida más sana y tranquila, por eso, te dejamos a continuación una serie de métodos que ayudan a manejar el estrés y lograr total relajación."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_metodos" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="409dp"
        android:layout_height="488dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/trazado3_xxdpi_05" />

    <Button
        android:id="@+id/favoritos"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="60dp"
        android:layout_weight="1"
        android:background="@drawable/option5_button"
        android:text="Favoritos"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/estiramiento"
        android:layout_width="160dp"
        android:layout_height="84dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/option3_button"
        android:text="Estiramiento"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tecnicas"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/respiracion3"
        android:layout_width="160dp"
        android:layout_height="84dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/option1_button"
        android:text="Respiración"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/meditaicion"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/meditaicion"
        android:layout_width="160dp"
        android:layout_height="137dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/option2_button"
        android:text="Meditación"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/favoritos"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tecnicas"
        android:layout_width="160dp"
        android:layout_height="232dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/option4_button"
        android:text="Técnicas"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>